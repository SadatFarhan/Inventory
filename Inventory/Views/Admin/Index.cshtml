@model Inventory.Models.AdminDashboard

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm p-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="m-0">User List</h5>
                    <div class="d-flex align-items-center">
                        <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-sm ms-2">Create New</a>
                        <input type="text" class="form-control form-control-sm ms-2" placeholder="Search...">
                    </div>
                </div>

                <div class="mb-3 d-flex justify-content-end gap-2">
                    <button id="changeRoleButton" class="btn btn-info btn-sm" disabled>Change Role</button>
                    <button id="editUserButton" class="btn btn-primary btn-sm" disabled>Edit User</button>
                    <button id="deleteUserButton" class="btn btn-danger btn-sm" disabled>Delete User</button>
                </div>

                <form id="userActionsForm" method="post" action="">
                    <input type="hidden" name="selectedUserIds" id="selectedUserIds" />
                    <div class="table-responsive">
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th><input type="checkbox" id="selectAllUsers"></th>
                                    <th>Username & Email</th>
                                    <th>Role</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Users != null && Model.Users.Any())
                                {
                                    @foreach (var user in Model.Users)
                                    {
                                        <tr>
                                            <td><input type="checkbox" class="user-checkbox" data-id="@user.Id"></td>
                                            <td>
                                                <strong class="d-block">@user.UserName</strong>
                                                <small class="text-muted d-block">@user.Email</small>
                                            </td>
                                            <td>@user.Role</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="3" class="text-center">No users found.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </form>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm p-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="m-0">Inventory Items</h5>
                    <div class="d-flex align-items-center">
                        <a asp-controller="User" asp-action="CreateInventory" class="btn btn-primary btn-sm">Create New</a>
                        <input type="text" class="form-control form-control-sm ms-2" placeholder="Search...">
                    </div>
                </div>
                <div class="mb-3 d-flex justify-content-end gap-2">
                    <button id="editInventoryButton" class="btn btn-primary btn-sm" disabled>Edit Inventory</button>
                    <button id="deleteInventoriesButton" class="btn btn-danger btn-sm" disabled>Delete Selected</button>
                </div>

                <form id="inventoryActionsForm" method="post" action="">
                    <input type="hidden" name="selectedInventoryIds" id="selectedInventoryIds" />
                    <div class="list-group list-group-flush">
                        @if (Model.InventoryItems != null && Model.InventoryItems.Any())
                        {
                            @foreach (var item in Model.InventoryItems)
                            {
                                <li class="list-group-item">
                                    <div class="d-flex align-items-center">
                                        <input type="checkbox" class="inventory-checkbox me-2" data-id="@item.Id">
                                        <div class="flex-grow-1">
                                            <div class="d-flex w-100 justify-content-between">
                                                <h6 class="mb-1">@item.ItemName</h6>
                                                <small class="text-muted">Quantity: @item.Quantity</small>
                                            </div>
                                            <p class="mb-1">Category: @item.Description</p>
                                            <small class="text-muted">Created By: @item.Creator.UserName</small>
                                        </div>
                                    </div>
                                </li>
                            }
                        }
                        else
                        {
                            <div class="list-group-item">No inventory items found.</div>
                        }
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            // Function to handle user list button states
            function toggleUserButtons() {
                const checkedCount = $('.user-checkbox:checked').length;
                $('#changeRoleButton').prop('disabled', checkedCount !== 1);
                $('#editUserButton').prop('disabled', checkedCount !== 1);
                $('#deleteUserButton').prop('disabled', checkedCount === 0);
            }

            // Function to handle inventory list button states
            function toggleInventoryButtons() {
                const checkedCount = $('.inventory-checkbox:checked').length;
                $('#editInventoryButton').prop('disabled', checkedCount !== 1);
                $('#deleteInventoriesButton').prop('disabled', checkedCount === 0);
            }

            // 'Select All' users checkbox logic
            $('#selectAllUsers').change(function() {
                $('.user-checkbox').prop('checked', $(this).prop('checked'));
                toggleUserButtons();
            });

            // Individual user checkbox logic
            $('.user-checkbox').change(function() {
                toggleUserButtons();
            });

            // Individual inventory checkbox logic
            $('.inventory-checkbox').change(function() {
                toggleInventoryButtons();
            });

            // User button click handlers
            $('#changeRoleButton').click(function() {
                const userId = $('.user-checkbox:checked').data('id');
                window.location.href = `/Admin/ChangeRole/${userId}`;
            });

            $('#editUserButton').click(function() {
                const userId = $('.user-checkbox:checked').data('id');
                window.location.href = `/Admin/EditUser/${userId}`;
            });

            $('#deleteUserButton').click(function(e) {
                e.preventDefault();
                const selectedIds = $('.user-checkbox:checked').map(function() {
                    return $(this).data('id');
                }).get();

                if (selectedIds.length > 0) {
                    if (confirm(`Are you sure you want to delete ${selectedIds.length} user(s)?`)) {
                        $('#selectedUserIds').val(selectedIds.join(','));
                        const form = $('#userActionsForm');
                        form.attr('action', '/Admin/DeleteUsers');
                        form.submit();
                    }
                }
            });

            // Inventory button click handlers
            $('#editInventoryButton').click(function() {
                const inventoryId = $('.inventory-checkbox:checked').data('id');
                window.location.href = `/Admin/EditInventory/${inventoryId}`;
            });

                      $('#deleteInventoriesButton').click(function(e) {
            e.preventDefault();
            const selectedIds = $('.inventory-checkbox:checked').map(function() {
                return $(this).data('id');
            }).get();

            if (selectedIds.length > 0) {
                if (confirm(`Are you sure you want to delete ${selectedIds.length} inventory item(s)?`)) {
                    // Put the comma-separated IDs into the hidden input
                    $('#selectedInventoryIds').val(selectedIds.join(','));

                    // Set the form's action and submit it
                    const form = $('#inventoryActionsForm');
                    // Change this line to the correct action name
                    form.attr('action', '/Admin/DeleteInventories');
                    form.submit();
                }
            }
        });

            // Initial button state check on page load
            toggleUserButtons();
            toggleInventoryButtons();
        });
    </script>
}